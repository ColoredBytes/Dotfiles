{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#ff79c6", 
          "template": "root <#f8f8f2>in</> ",
          "type": "root"
        },
        {
          "foreground": "#8be9fd", 
          "properties": {
            "style": "folder"
          },
          "style": "plain",
          "template": "{{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#bd93f9", 
          "properties": {
            "fetch_status": true
          },
          "style": "plain",
          "template": "<#f8f8f2>on</> {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "type": "git"
        },
        {
          "properties": {
            "fetch_version": true
          },
          "style": "plain",
          "template": "<#f8f8f2>via</> \ue781 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "type": "node"
        },
        {
          "foreground": "#ff5555", 
          "style": "plain",
          "template": "x ",
          "type": "status"
        },
        {
          "foreground": "#f8f8f2", 
          "style": "plain",
          "template": "{{ .User }}@{{ .Host }} {{ .Time }} ",
          "type": "user"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#ffb86c", 
          "template": "\u279c ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
